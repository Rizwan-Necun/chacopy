<!--    android:layout_height="wrap_content"-->
<!--    >-->
<LinearLayout
    android:layout_marginTop="40dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_one"
        android:tag="binding_1"                                              
        android:src="@drawable/sample_image_one"
     android:layout_weight="1"
android:scaleType="fitXY"

        android:layout_width="0dp"
        android:layout_height="100dp"

       />
    <ImageView

        android:id="@+id/image_two"
         android:layout_marginStart="20dp"
        android:src="@drawable/sample_image_two"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:contentDescription="content description"
        android:tag="binding_2"                                              
        />
    <ImageView
        android:id="@+id/image_three"
        android:layout_marginStart="20dp"
        android:src="@drawable/sample_image_three"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:tag="binding_3"                                              
        />
    <ImageView
        android:id="@+id/image_four"
        android:layout_marginStart="20dp"
        android:src="@drawable/sample_image_four"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:tag="binding_4"                                              
        />
</LinearLayout>
<!--</HorizontalScrollView>-->
<!--    <HorizontalScrollView-->
<!--        android:layout_marginTop="40dp"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        >-->
        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_five"
                android:src="@drawable/sample_image_five"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:tag="binding_5"                                              
                />
            <ImageView
                android:id="@+id/image_six"
                android:layout_marginStart="20dp"
                android:src="@drawable/sample_image_six"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:tag="binding_6"                                              
                />
            <ImageView
                android:id="@+id/image_seven"
                android:layout_marginStart="20dp"
                android:src="@drawable/sample_image_seven"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:tag="binding_7"                                              
                />
            <ImageView
                android:id="@+id/image_eight"
                android:layout_marginStart="20dp"
                android:src="@drawable/sample_image_eight"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:tag="binding_8"                                              
                />
        </LinearLayout>
<!--    </HorizontalScrollView>-->


    <Button
        android:id="@+id/select_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
       android:layout_gravity="center"
        android:text="Choose an Image"
        android:tag="binding_9"                                              
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_nine"
        android:layout_marginTop="35dp"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/ic_launcher_background"/>
</LinearLayout>
</androidx.core.widget.NestedScrollView>
    </LinearLayout>
         